{
    "compilerOptions": {
        "target": "ES6",

        "module": "CommonJS",
        "lib": [
            "DOM",
            "ES2021"
        ],
        "allowJs": true,
        "removeComments": true,
        "pretty": true,
        "declaration": false,

        "strict": true,
        "strictPropertyInitialization": false,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "typeRoots": [
            "node_modules/@types",
            "source/@types"
        ]
    }
}
