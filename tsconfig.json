{
    "compilerOptions": {
        "target": "ES6",

        "module": "CommonJS",
        "lib": [
            "ES2021",
        ],
        "allowJs": true,
        "outDir": "./build",
        "removeComments": true,
        "pretty": true,
        "declaration": false,

        "strict": true,
        "strictPropertyInitialization": false,

        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
}
