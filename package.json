{
    "name": "curlys-store",
    "main": "index.ts",
    "private": true,
    "author": "Alexander Smirnov",
    "version": "1.0.0",
    "scripts": {
        "bundle:run": "node build/index.js",
        "bundle:clear": "rm -rfv build",
        "bundle:compile": "npm run bundle:clear && tsc --project source/tsconfig.json",
        "dev:live": "nodemon",
        "dev:test": "mocha",
        "dev:coverage": "nyc npm run dev:test",
        "dev:check": "tsc --noEmit",
        "dev:lint": "eslint ./source --ext .ts,.tsx",
        "commit": "git-cz",
        "release": "semantic-release --no-verify",
        "postinstall": "husky install"
    },
    "dependencies": {
        "@nestjs/common": "8.0.0",
        "@nestjs/config": "1.0.1",
        "@nestjs/core": "8.0.0",
        "@nestjs/platform-express": "8.0.0",
        "@nestjs/typeorm": "8.0.2",
        "@sashahohloma/utilities": "6.0.2",
        "class-transformer": "0.4.0",
        "class-validator": "0.13.1",
        "date-fns": "2.24.0",
        "pg": "8.6.0",
        "pg-types": "2.2.0",
        "typeorm": "0.2.38"
    },
    "devDependencies": {
        "@semantic-release/git": "10.0.0",
        "@types/express": "4.17.11",
        "@types/mocha": "9.0.0",
        "@types/pg": "8.6.1",
        "@typescript-eslint/eslint-plugin": "4.30.0",
        "@typescript-eslint/parser": "4.30.0",
        "commitizen": "4.2.4",
        "cross-env": "7.0.3",
        "cz-conventional-changelog": "3.2.0",
        "eslint": "7.32.0",
        "husky": "7.0.2",
        "mocha": "9.1.1",
        "nodemon": "2.0.12",
        "nyc": "15.1.0",
        "semantic-release": "18.0.0",
        "ts-node": "10.2.1",
        "typescript": "4.4.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
