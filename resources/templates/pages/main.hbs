{{> navbar isMainPage='true' }}

<main class="main main__swiper">
    <div class="main__background" style="background-image: url({{ manifest 'assets/background.webp' }});"></div>
    <div class="main__slider swiper-wrapper">
        {{#each desserts as |dessert| }}

            <div class="swiper-slide">
                <div class="main__container">
                    <div class="main__column">
                        <a class="main__link" href="{{ productLink dessert.slug }}" title="{{ dessert.name }}">
                            {{> collage uuid=dessert.images.[0].uuid name=dessert.name }}
                        </a>
                    </div>
                    <div class="main__column">
                        <div class="main__information">
                            <h2 class="main__title">
                                {{ dessert.name }}
                            </h2>
                            <p class="main__description">
                                {{ dessert.description }} 
                            </p>
                            {{> rating rating=dessert.rating reviews=dessert.reviews.length }}
                            <a class="main__details" href="{{ productLink dessert.slug }}" title="{{ dessert.name }}">
                                Подробнее
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        {{/each}}
    </div>
</main>

